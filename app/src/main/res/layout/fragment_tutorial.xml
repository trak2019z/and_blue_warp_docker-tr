<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
	<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	                                                   android:orientation="vertical"
	                                                   android:layout_width="match_parent"
	                                                   android:layout_height="match_parent">

		<ImageView android:id="@+id/iv_tutorial_icon"
		           android:layout_width="match_parent"
		           android:src="@drawable/ic_logo"
		           android:layout_height="@dimen/logo_base_size"
		           app:layout_constraintStart_toStartOf="parent"
		           app:layout_constraintEnd_toEndOf="parent"
		           app:layout_constraintBottom_toBottomOf="parent"
		           app:layout_constraintTop_toTopOf="parent"/>

		<TextView style="@style/TextViewBig"
		          android:id="@+id/tv_tutorial_title"
		          android:gravity="center_horizontal"
		          tools:text="@string/tutorial_title_3"
		          app:layout_constraintStart_toStartOf="parent"
		          app:layout_constraintEnd_toEndOf="parent"
		          app:layout_constraintTop_toBottomOf="@id/iv_tutorial_icon"
		          android:layout_marginTop="32dp"
		          android:textColor="@color/appAccentColor"
		          android:textStyle="bold"/>
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>